num_1 = int(input("Please enter your first number: "))
num_2 = int(input("Pleasee enter your second number: "))
if num_1 > num_2:
    difference = num_1 - num_2
    print(f"The second number is smaller.\nThe difference is {difference}.")
elif num_1 < num_2:
    difference = num_2 - num_1
    print(f"The first number is smaller.\nThe difference is {difference}.")
elif num_1 == num_2:
    print("The two numbers are equal.")